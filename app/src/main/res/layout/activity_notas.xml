<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar superior común -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_notas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:title="Notas"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.Material3.Light" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <!-- Contenedor para superponer RecyclerView y mensaje vacío -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_notas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" />

            <!-- Mensaje vacío centrado -->
            <TextView
                android:id="@+id/texto_vacio_notas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pulsa + para registrar una nota"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:visibility="gone"
                android:padding="16dp" />
        </FrameLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
