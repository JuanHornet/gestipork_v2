<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar superior común -->
    <include
        layout="@layout/toolbar_estandar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <!-- Contenedor para superponer RecyclerView y mensaje vacío -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_lotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" />

            <!-- Mensaje vacío centrado -->
            <TextView
                android:id="@+id/txtVacio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pulsa + para añadir un lote"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:visibility="gone"
                android:padding="16dp" />
        </FrameLayout>

    </LinearLayout>
    <!-- Menú inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_lotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/menu_lote_bottom"
        app:labelVisibilityMode="labeled" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
