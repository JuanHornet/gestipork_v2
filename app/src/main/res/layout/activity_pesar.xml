<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ✅ Toolbar superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_pesar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:title="Histórico de Pesos"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.Material3.Light" />

    <!-- ✅ RecyclerView para historial -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- RecyclerView para historial -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_pesajes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />

        <!-- Texto centrado cuando no hay registros -->
        <TextView
            android:id="@+id/textEmptyPesajes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay pesajes registrados para este lote"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>

