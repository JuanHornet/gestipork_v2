<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar superior comÃºn -->
    <include
        layout="@layout/toolbar_estandar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <!-- Resumen -->
        <TextView
            android:id="@+id/txtTotalConteos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total registros: 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/txtSaldoActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo actual: 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:paddingBottom="8dp" />

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewConteos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
