<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:radius="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Fecha -->
        <TextView
            android:id="@+id/text_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15-05-2025"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:textColor="@android:color/black" />

        <!--Reutilizamos el bloque de resumen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Columna izquierda -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_total_animales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Animales: 0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_media_pesos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media kg: 0"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_media_arrobas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media @: 0"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Columna derecha -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end|center_vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/text_segmentacion13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-13@: 0"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_segmentacion14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13-14@: 0"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_segmentacion15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14-15@: 0"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_segmentacion16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+15@: 0"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
